<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@android:color/holo_blue_bright"
    android:orientation="horizontal"
    android:padding="10dp"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/image_duty_state"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/image"
        android:scaleType="fitXY"
        android:src="@drawable/good_job" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_duty_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="밥먹기"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_duty_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_duty_name"
            android:layout_alignParentStart="true"
            android:text="Completed" />

        <TextView
            android:id="@+id/txt_duty_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:text="2020년 11월 20일" />

        <TextView
            android:id="@+id/txt_duty_remaining_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_duty_state"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:text="4일 남음" />

    </RelativeLayout>

</LinearLayout>