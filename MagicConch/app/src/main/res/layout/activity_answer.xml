<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AnswerActivity">

    <Button
        android:id="@+id/buttonQuestionAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/classic_m"
        android:text="@string/question_again"
        android:textColor="@color/brightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnswer" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/classic_m"
        android:text="@string/exit"
        android:textColor="@color/brightBlue"
        app:layout_constraintEnd_toEndOf="@+id/buttonQuestionAgain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonQuestionAgain"
        app:layout_constraintTop_toBottomOf="@+id/buttonQuestionAgain" />

    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/classic_l"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/brightBlue"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonQuestionAgain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="답변" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/brightBlue"
        app:layout_constraintBottom_toTopOf="@+id/textViewAnswer"
        app:layout_constraintEnd_toEndOf="@+id/textViewAnswer"
        app:layout_constraintStart_toStartOf="@+id/textViewAnswer" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/brightBlue"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewAnswer"
        app:layout_constraintStart_toStartOf="@+id/textViewAnswer"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnswer" />

</androidx.constraintlayout.widget.ConstraintLayout>