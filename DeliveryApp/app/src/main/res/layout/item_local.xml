<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/txtLocalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/txtLocalAddress"
        android:ellipsize="end"
        android:textColor="#444"
        android:textSize="16sp"
        android:gravity="start"
        android:maxLines="1"
        android:text="맘스터치"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLocalName"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLocalCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="패스트푸드"
            android:textColor="#444"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="#444"
            android:layout_marginEnd="4dp"
            android:text=">"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtLocalSubcategory"
            android:layout_width="wrap_content"
            android:textColor="#444"
            android:layout_height="wrap_content"
            android:text="햄버거"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtLocalAddress"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="#444"
        android:text="주소명"
        android:textSize="13sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtLocalPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLocalAddress"
        android:layout_alignParentEnd="true"
        android:textColor="#444"
        android:text="010-1234-5678"
        android:textSize="13sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>