<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtLocalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맘스터치"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtOrderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLocalName"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/txtTotalPrice"
        android:text="싸이버거, 콜라, 감자튀김"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtOrderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="2021-07-03"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOrderDate"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@id/txtLabel"
        android:text="17,300"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtTotalPrice"
        android:layout_alignParentEnd="true"
        android:text="@string/unit_price"
        tools:ignore="HardcodedText" />

</RelativeLayout>